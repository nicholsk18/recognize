<li
  id="user-<%= user.id %>"
  class="list-group-item d-flex flex-column gap-1 <%= 'highlight-new' if local_assigns[:highlight] %>"
>
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <div>
        <strong><%= user.name %></strong>
      </div>
      <div class="text-muted"><%= user.email %></div>
      <div class="text-muted" style="font-size: 0.7rem">
        <%= time_ago_in_words(user.created_at) %> ago
      </div>
    </div>
    <div>
      <%= button_to user_path(user), method: :delete, local: false, class: 'btn btn-outline-danger
      btn-sm', title: 'Delete user' do %>
      <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </div>
</li>
