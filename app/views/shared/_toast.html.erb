<% toast_class = case kind.to_s
when 'notice' then 'text-bg-success'
when 'alert' then 'text-bg-danger'
else 'text-bg-info'
end %>
<div class="toast align-items-center <%= toast_class %> border-0" role="status" aria-live="polite" aria-atomic="true" data-bs-autohide="true" data-bs-delay="3500">
  <div class="d-flex">
    <div class="toast-body small"><%= message %></div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>
