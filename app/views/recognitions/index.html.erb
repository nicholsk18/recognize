<div id="recognitions" class="container">
  <div class="row g-4">
    <div class="col-lg-12">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h6 mb-0">Recent Recognitions</h2>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#recognition-modal">
          Send Recognition
        </button>
      </div>
      <ul id="recognitions-list" class="list-group small">
        <% @recognitions.each do |recognition| %>
          <%= render 'recognition', recognition: recognition %>
        <% end %>
        <% if @recognitions.empty? %>
          <li id="recognitions-empty" class="list-group-item text-muted">No recognitions yet.</li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


<div class="modal" tabindex="-1" id="recognition-modal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Send Recognition</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="recognition-form">
          <%= render 'form', recognition: @recognition, users: @users, badges: @badges %>
        </div>
      </div>
    </div>
  </div>
</div>
