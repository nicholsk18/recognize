<section id="login" class="vh-100">
  <div class="container h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-sm-6 col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h1 class="h4 mb-3">Login</h1>
            <%= form_with url: login_path, method: :post, class: 'vstack gap-3'
            do %>
            <div>
              <label class="form-label small">Email</label>
              <%= email_field_tag :email, params[:email], class: 'form-control
              form-control-sm' %>
            </div>
            <div>
              <label class="form-label small">Password</label>
              <%= password_field_tag :password, nil, class: 'form-control
              form-control-sm' %>
            </div>
            <div>
              <%= submit_tag 'Login', class: 'btn btn-primary btn-sm w-100' %>
            </div>
            <% end %>
            <p class="mt-3 small text-muted">
              Use seeded credentials (see README).
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
