<%= form_with model: badge, url: badges_path, local: false, data: { modal_target: "badge-modal" }, class: 'vstack gap-2' do |f| %>
<div>
  <label class="form-label small">Name</label>
  <%= f.text_field :name, class: [ 'form-control form-control-sm', (badge.errors[:name].present?) ?
  'is-invalid' : nil ].compact.join(' ') %> <% if badge.errors[:name].present? %>
  <div class="invalid-feedback d-block"><%= badge.errors[:name].uniq.join(', ') %></div>
  <% end %>
</div>

<div>
  <label class="form-label small">Slug</label>
  <%= f.text_field :slug, class: [ 'form-control form-control-sm', (badge.errors[:slug].present?) ?
  'is-invalid' : nil ].compact.join(' ') %> <% if badge.errors[:slug].present? %>
  <div class="invalid-feedback d-block"><%= badge.errors[:slug].uniq.join(', ') %></div>
  <% end %>
</div>

<div><%= f.submit 'Create', class: 'btn btn-primary btn-sm' %></div>
<% end %>
